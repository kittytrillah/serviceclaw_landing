---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { AiFillCheckCircle, AiFillThunderbolt, AiOutlineArrowRight } from "react-icons/ai";

const { business_case_sections } = Astro.props;
---

{business_case_sections && business_case_sections.map((section: any, sectionIndex: number) => (
  <section class={`section ${sectionIndex % 2 === 0 ? "bg-theme-light" : ""}`}>
    <div class="container">
      <div class="row justify-center text-center">
        <div class="lg:col-10">
          <h2 class="h1 mb-4" set:html={markdownify(section.title)} />
          <p class="text-lg" set:html={markdownify(section.subtitle)} />
        </div>
      </div>

      <div class="mt-12">
        {section.use_cases.map((useCase: any, useCaseIndex: number) => (
          <div class="mb-20 last:mb-0">
             <div class="mb-8 border-b border-border pb-4">
                <h3 class="h4 mb-2 text-primary">{useCase.title}</h3>
             </div>

            {/* Layout Switcher based on useCase.layout */}
            {useCase.layout === "Linear process flow" && (
               <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative">
                  {/* Connector Line for Desktop */}
                  <div class="hidden md:block absolute top-[20%] left-[16%] right-[16%] h-0.5 bg-border -z-10"></div>
                  
                  {useCase.steps.map((step: any, stepIndex: number) => (
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-border h-full flex flex-col relative">
                        <div class="mb-6 relative flex justify-center">
                            <span class="absolute -top-3 -left-3 bg-primary text-white w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm z-20">
                                {stepIndex + 1}
                            </span>
                             <div class="bg-theme-light rounded-md w-full h-40 flex items-center justify-center text-text-light text-sm italic p-4 text-center border border-dashed border-border">
                                {step.image_placeholder}
                             </div>
                        </div>
                        <h4 class="h5 mb-2">{step.title}</h4>
                        <p class="text-sm text-text-light mb-2 font-medium">"{step.copy}"</p>
                        <p class="text-sm">{step.description}</p>
                    </div>
                  ))}
               </div>
            )}

             {useCase.layout === "Card overlay" && (
               <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                  <div class="relative order-2 lg:order-1">
                      {/* Visualizing Card Overlay */}
                       <div class="bg-white p-6 rounded-xl shadow-lg border border-border z-10 relative">
                           <div class="flex items-center justify-between mb-4 border-b border-border pb-2">
                               <h5 class="font-bold">Latest Signals</h5>
                               <span class="bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full">Live</span>
                           </div>
                           {useCase.steps.slice(0, 1).map((step: any) => (
                               <div class="mb-4">
                                   <div class="font-medium text-primary mb-1">{step.copy}</div>
                                   <div class="text-sm text-text-light">{step.image_placeholder}</div>
                               </div>
                           ))}
                       </div>
                       <div class="bg-theme-light p-6 rounded-xl border border-border absolute top-4 left-4 -right-4 -bottom-4 -z-0"></div>
                  </div>
                  <div class="order-1 lg:order-2">
                      <div class="space-y-8">
                         {useCase.steps.map((step: any, stepIndex: number) => (
                             <div class="flex gap-4">
                                 <div class="flex-shrink-0 mt-1">
                                     <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center font-bold text-sm">
                                         {stepIndex + 1}
                                     </div>
                                 </div>
                                 <div>
                                     <h4 class="h6 mb-1">{step.title}</h4>
                                     <p class="text-sm text-primary mb-1 font-medium">"{step.copy}"</p>
                                     <p class="text-sm text-text-light">{step.description}</p>
                                 </div>
                             </div>
                         ))}
                      </div>
                  </div>
               </div>
            )}

            {useCase.layout === "Split screen" && (
                <div class="grid grid-cols-1 md:grid-cols-2 gap-0 border border-border rounded-xl overflow-hidden shadow-sm">
                    <div class="bg-red-50 p-8 border-r border-border border-b md:border-b-0">
                        <div class="flex items-center gap-2 mb-6">
                            <span class="text-red-500 text-xl font-bold">Problem</span>
                        </div>
                        {useCase.steps.slice(0, 1).map((step: any) => (
                            <div>
                                <h4 class="h5 mb-2">{step.title}</h4>
                                <div class="bg-white p-4 rounded border border-red-100 mb-4 text-sm text-text-light italic shadow-sm">
                                    {step.image_placeholder}
                                </div>
                                <p class="text-sm">{step.description}</p>
                            </div>
                        ))}
                    </div>
                    <div class="bg-green-50 p-8">
                         <div class="flex items-center gap-2 mb-6">
                            <span class="text-green-600 text-xl font-bold">Solution</span>
                        </div>
                        <div class="space-y-6">
                             {useCase.steps.slice(1).map((step: any) => (
                                <div class="last:mb-0">
                                    <h4 class="h5 mb-2">{step.title}</h4>
                                    <div class="bg-white p-4 rounded border border-green-100 mb-2 text-sm text-text-light italic shadow-sm">
                                         {step.copy}
                                    </div>
                                    <p class="text-sm">{step.description}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            )}

            {useCase.layout === "Timeline" && (
              <div class="relative pl-4 md:pl-0">
                 <div class="absolute left-6 md:left-1/2 top-0 bottom-0 w-0.5 bg-border -translate-x-1/2"></div>
                 <div class="space-y-12">
                    {useCase.steps.map((step: any, stepIndex: number) => (
                        <div class={`relative flex flex-col md:flex-row items-center justify-between gap-8 ${stepIndex % 2 !== 0 ? 'md:flex-row-reverse' : ''}`}>
                            <div class="md:w-[45%] bg-white p-5 rounded-lg border border-border shadow-sm w-full ml-12 md:ml-0 z-10">
                                <h4 class="h6 mb-1">{step.title}</h4>
                                <p class="text-sm font-medium text-primary mb-1">"{step.copy}"</p>
                                <p class="text-sm text-text-light">{step.description}</p>
                            </div>
                            
                            <div class="absolute left-6 md:left-1/2 -translate-x-1/2 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-sm ring-1 ring-border z-20"></div>

                            <div class="md:w-[45%] w-full pl-12 md:pl-0">
                                 <div class="bg-theme-light rounded px-4 py-3 text-xs italic text-text-light border border-dashed border-border">
                                    {step.image_placeholder}
                                </div>
                            </div>
                        </div>
                    ))}
                 </div>
              </div>
            )}
            
            {useCase.layout === "Scanner" && (
                <div class="bg-dark text-white p-8 rounded-xl overflow-hidden relative">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative z-10">
                        {useCase.steps.map((step: any, stepIndex: number) => (
                             <div class={`border-l-2 ${stepIndex === 1 ? 'border-primary' : 'border-white/10'} pl-6`}>
                                 <div class="text-xs font-mono text-white/50 mb-2">STEP 0{stepIndex + 1}</div>
                                 <h4 class="h6 mb-2 text-white">{step.title}</h4>
                                 <p class="text-sm text-primary mb-2 font-mono">_ {step.copy}</p>
                                 <p class="text-sm text-white/70 mb-4">{step.description}</p>
                                 <div class="text-xs font-mono text-white/40 border border-white/10 p-2 rounded bg-white/5">
                                     {step.image_placeholder}
                                 </div>
                             </div>
                        ))}
                    </div>
                    {/* Background decoration */}
                    <div class="absolute top-0 right-0 w-64 h-64 bg-primary/20 blur-3xl rounded-full -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
                </div>
            )}

             {useCase.layout === "Radar" && (
                 <div class="flex flex-col md:flex-row gap-12 items-center">
                    <div class="md:w-1/2 w-full order-2 md:order-1">
                         <div class="space-y-4">
                            {useCase.steps.map((step: any, stepIndex: number) => (
                                <div class="flex gap-4 p-4 rounded-lg bg-white shadow-sm border border-border">
                                    <div class="mt-1 text-primary text-xl">
                                        <AiOutlineArrowRight />
                                    </div>
                                    <div>
                                         <h4 class="h6 mb-1">{step.title}</h4>
                                         <p class="text-sm text-primary mb-1 font-bold">"{step.copy}"</p>
                                         <p class="text-sm text-text-light">{step.description}</p>
                                    </div>
                                </div>
                            ))}
                         </div>
                    </div>
                    <div class="md:w-1/2 w-full relative min-h-[350px] bg-theme-light rounded-2xl flex items-center justify-center p-8 border border-border order-1 md:order-2">
                         <div class="relative w-full max-w-[300px] aspect-square rounded-full border border-border flex items-center justify-center bg-white shadow-inner">
                             <div class="w-2/3 h-2/3 rounded-full border border-dashed border-primary/30 flex items-center justify-center">
                                 <div class="w-1/3 h-1/3 rounded-full bg-primary/5 animate-pulse"></div>
                             </div>
                             {/* Radar Blips */}
                             <div class="absolute top-4 right-4 bg-white shadow-lg p-3 rounded-lg border border-border text-xs max-w-[150px] z-10 animate-bounce">
                                <span class="text-red-500 font-bold block mb-1">Make Decision</span>
                                {useCase.steps[2] && useCase.steps[2].copy}
                             </div>
                             <div class="absolute bottom-10 left-0 bg-white shadow-lg p-3 rounded-lg border border-border text-xs max-w-[150px] z-10">
                                <span class="text-blue-500 font-bold block mb-1">Comparison</span>
                                {useCase.steps[1] && useCase.steps[1].copy}
                             </div>
                         </div>
                    </div>
                 </div>
            )}

          </div>
        ))}
      </div>
    </div>
  </section>
))}
